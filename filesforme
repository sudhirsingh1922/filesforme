            android:name=".RecieveActivity"
            android:exported="true">
            <intent-filter>
            <action android:name="android.intent.action.SEND" />
            <category android:name="android.intent.category.DEFAULT" />
            <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>


    </application>

